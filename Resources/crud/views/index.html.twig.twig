{{ '{################################################
    Layout Definitions & Variables
#################################################}'}}

{{ '{# Layout #}' }}
{{ '{% extends \'layout_backend.html.twig\' %}' }}

{{ '{# Sidebar: Active Link #}' }}
{{ '{% block navActive' }}{{ name | capitalize }} {{ '%} class="active" {% endblock %}' }}

{{ '{# Content-Header: Titel und optionale Description + Breadcrumps #}' }}
{{ '{% block pageHeader %}' }}
    {{ '{{ parent() }}' }}

    {{ '{# Site title #}' }}
    {{ '{% block pageHeaderTitel %}{{ titelPlural }}{% endblock %}' }}

    {{ '{# Desciption next to site title #}' }}
    {{ '{% block pageHeaderDescription %}Ãœbersicht der {{ titelPlural }}{% endblock %}' }}

    {{ '{# Breadcrumb: Toplevel #}' }}
    {{ '{% block BreadcrumbMainLevel %}' }}
        <li><a href="{{ '{{ path(path) }}' }}"><i class="fa fa-sitemap"></i>{{ '{{ titel }}' }}</a></li>
    {{ '{% endblock %}' }}

    {{ '{# Breadcrumb: Sublevel #}' }}
    {{ '{% block BreadcrumbMainLevelSubOne %}{% endblock %} {# No Sublevel here #}' }}
{{ '{% endblock %}' }}

{{ '{% block content %}' }}

    <section class="content">
        <div class="box box-default">
            <div class="box-body">
                <div class="row">
                    <div class="col-sm-4">
                        <a class="btn btn-primary" href="{{ '{{ path(path~\'_insert\') }}' }}">Neuer Eintrag</a>
                    </div>
                    <div class="col-sm-4">
                        <div class="input-group">
                            <input id="searchDefault" type="text" class="form-control" placeholder="Suche nach...">
                            <div class="input-group-addon">
                                <span class="fa fa-search"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="pull-right">

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-titel">{{ '{{ titel }}' }}</h3>
                    </div>
                    <div class="box-body">
                        <table class="table table-striped table-data">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>Beschrieb</th>
                                <th>Bearbeiten</th>
                            </tr>
                            </thead>

                            <tbody>
                            {{ '{% for item in data %}' }}
                                <tr>
                                    <td class="vert-align">{{ '{{ item.name }}' }}</td>
                                    <td class="vert-align">{{ '{{ item.beschrieb }}' }}</td>
                                    <td class="vert-align">
                                        <div class="btn-group btn-group-sm">
                                            <a href="{{ '{{ path(path~\'_update \', {\'id\' : item.id }) }}' }}" class="btn btn-default" data-tooltip="Eintrag bearbeiten" data-tooltip-position="top"><span class="glyphicon glyphicon-pencil" aria-hidden="true">&nbsp;</span>bearbeiten</a>
                                        </div>
                                    </td>
                                </tr>
                            {{ '{% endfor %}' }}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
{{ '{% endblock %}' }}